{
  "name": "vscode-jira",
  "displayName": "vscode-jira",
  "description": "View a list of JIRA issues and related Github branches",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitBranchesView.checkoutLocalBranch",
        "title": "Checkout Local Branch"
      },
      {
        "command": "gitBranchesView.checkoutRemoteBranch",
        "title": "Checkout Remote Branch"
      },
      {
        "command": "gitBranchesView.deleteLocalBranch",
        "title": "Delete branch",
        "icon": "resources/delete.svg"
      },
      {
        "command": "gitBranchesView.addBranch",
        "title": "Add Branch"
      },
      {
        "command": "gitBranchesView.pullFromDevelop",
        "title": "Pull from origin develop",
        "icon": "resources/pull.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitBranchesView.addBranch",
          "when": "view == gitBranchesView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gitBranchesView.deleteLocalBranch",
          "when": "view == gitBranchesView && viewItem == local-branch",
          "group": "inline"
        },
        {
          "command": "gitBranchesView.pullFromDevelop",
          "when": "view == gitBranchesView && viewItem == local-branch",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jiraViewContainer",
          "title": "JIRA View",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "jiraViewContainer": [
        {
          "id": "gitBranchesView",
          "name": "Git Branches"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
